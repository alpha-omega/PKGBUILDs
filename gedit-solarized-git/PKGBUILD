# Maintainer: OmeGa <omega at mailoo dot org>

pkgname=gedit-solarized-git
pkgver=20130103
pkgrel=1
pkgdesc="Precision colors for machines and people."
arch=('any')
url="https://github.com/mattcan/solarized-gedit"
license=('unknown')
depends=('gedit')
makedepends=('git')
install=$pkgname.install

_gitroot="git://github.com/mattcan/solarized-gedit.git"
_gitname="solarized-gedit"

build() {
  cd "$srcdir"

  msg "Connecting to GIT server..."
  if [[ -d $_gitname ]]; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone --depth=1 $_gitroot $_gitname
  fi
  msg "GIT checkout done or server timeout."
}

package() {
  cd "$srcdir/$_gitname"
  install -Dm644 solarized-dark.xml "$pkgdir/usr/share/gtksourceview-3.0/styles/solarized-dark.xml"
  install -Dm644 solarized-light.xml "$pkgdir/usr/share/gtksourceview-3.0/styles/solarized-light.xml"
}

# vim:set ts=2 sw=2 et:
