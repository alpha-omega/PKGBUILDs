pkgname=cinnamon-theme-tyr
_file=989W-78WC-EW28
pkgver=1.0.1
pkgrel=1
pkgdesc="A simple and sleek theme for Cinnamon."
arch=('any')
url="http://cinnamon-spices.linuxmint.com/themes/view/153"
license=('unknown')
depends=('cinnamon')
optdepends=('ttf-droid: Droid font family')
source=($pkgname-$pkgver.zip::http://cinnamon-spices.linuxmint.com/uploads/themes/$_file.zip)
sha1sums=('f38d2fe80807e7daba8151cfb302a903d962535b')

package() {
  cd "$srcdir/týrthemes"
  find Týr* -type f -exec install -Dm644 {} "$pkgdir/usr/share/themes/{}" \;
}

