# Maintainer: OmeGa <omega at mailoo dot org>

pkgname=otf-eb-garamond
pkgver=0.015c
pkgrel=1
pkgdesc="Digitization of the Garamond shown on the Egenolff-Berner specimen."
arch=('any')
url="http://www.georgduffner.at/ebgaramond/"
license=('custom:OFL')
depends=('fontconfig' 'xorg-font-utils')
install=otf.install
source=(http://cdn.bitbucket.org/georgd/eb-garamond/downloads/EBGaramond-$pkgver.zip)
sha1sums=('163ea32668db7c6ae1a341c8f091e37a6791cc14')

package() {
  cd "$srcdir/EBGaramond-$pkgver"
  install -d "$pkgdir/usr/share/fonts/TTF"
  install -m644 otf/*.otf "$pkgdir/usr/share/fonts/TTF/"
  install -Dm644 COPYING "$pkgdir/usr/share/licenses/$pkgname/COPYING"
}

# vim:set ts=2 sw=2 et:
