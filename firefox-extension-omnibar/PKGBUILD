# Maintainer: OmeGa <omega at mailoo dot org>

pkgname=firefox-extension-omnibar
_file=204138
pkgver=0.7.19.20130418
pkgrel=2
pkgdesc="Integrates the location bar and the search bar into one."
arch=('any')
url="https://addons.mozilla.org/en-US/firefox/addon/8823"
license=('MPL')
depends=('firefox')
makedepends=('unzip')
source=(https://addons.mozilla.org/firefox/downloads/file/$_file/omnibar-$pkgver.xpi)
noextract=(omnibar-$pkgver.xpi)
sha1sums=('eebb3cbe68118a60c667906e7eff123e3188fb38')

build() {
  cd "$srcdir"
  [[ -d $pkgname-extract ]] || \
    mkdir $pkgname-extract
  unzip -q -d $pkgname-extract \
    omnibar-$pkgver.xpi
}
  
package() {
  cd "$srcdir/$pkgname-extract"
  local emid=$(sed -n '/.*<em:id>\(.*\)<\/em:id>.*/{s//\1/p;q}' install.rdf)
  local dstdir="$pkgdir/usr/lib/firefox/browser/extensions/$emid"
  install -d "$dstdir"
  cp -R * "$dstdir"
  find "$pkgdir" -type d -exec chmod 0755 {} \;
  find "$pkgdir" -type f -exec chmod 0644 {} \;
}

# vim:set ts=2 sw=2 et:
