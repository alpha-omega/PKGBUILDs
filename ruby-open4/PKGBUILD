# Maintainer: OmeGa <omega {at} mailoo {dot} org>
# Contributor: Mathieu Clabaut <mathieu.clabaut@gmail.com>

pkgname=ruby-open4
_gemname=open4
pkgver=1.3.3
pkgrel=1
pkgdesc="Open and manage child processes and their io handles easily."
arch=('any')
url="https://github.com/ahoward/open4"
license=('Ruby')
depends=('ruby')
makedepends=('rubygems')
source=(http://rubygems.org/downloads/$_gemname-$pkgver.gem)
noextract=($_gemname-$pkgver.gem)
sha1sums=('4e4174ed6cb8602e8c988a370dca89459e1818e2')

package() {
  cd "$srcdir"
  local _gemdir="$(ruby -rubygems -e'puts Gem.default_dir')"
  gem install --no-user-install --ignore-dependencies -i \
    "$pkgdir$_gemdir" $_gemname-$pkgver.gem
}

